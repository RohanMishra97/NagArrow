<% include header %>
<div class="container-fluid">
	<div class="jumbotron">
		<h2>Emergency Panel</h2>
<h2>Send Announcements to residents nearby!</h2>
<form method="post" role="form">
	<div class="form-group">
		<label for="department">Department</label>
		<input type="text" id="department" class="form-control" name="department" placeholder="Water Supply Division" required>
	</div>
	<div class="form-group">
		<label for="description">Message</label>
		<textarea class="form-control" id="description" name="description" placeholder="Water Supply will be out for a day" rows="2" required></textarea>
	</div>
	<div class="form-group">
		<label for="password">Password</label>
		<input type="password" id="password" class="form-control" name="password" placeholder="Password" required>
	</div>
	<div class="form-group">
		<input type="submit" value="Send" class="btn btn-primary">
	</div>
</form>
	</div>
</div>
<% include footer %>